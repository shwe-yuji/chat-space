.side_bar
  .user
    .user__name 
      = current_user.name
    .user__icons
      = link_to new_group_path, class: 'user__icons__btn' do
        = fa_icon 'cog', class: 'user__icons__btn--cog'
      = link_to edit_user_path(current_user), class: 'user__icons__btn' do
        = fa_icon 'edit', class: 'user__icons__btn--edit'

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: 'group__link' do
          .group__name
            = group.name
          .group__comment
            = group.show_last_message